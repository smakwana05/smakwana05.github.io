---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import MainImgButton from "@components/MainImgButton.astro";
import HtmlBody from "@layouts/HtmlBody.astro";
---



<HtmlBody>

	<main class="allcontent">
		<Header headerclass="header"/>

		<div id="swup" class="gridwrapper transition-fade">
			<div class="container">
				<MainImgButton
					imagePath="/src/images/Menu_Art.jpg"
					altText="testin"
					url="/art-design"
					buttontext="ART / DESIGN"
					theme="art"
				/>
				<MainImgButton
					imagePath="/src/images/Menu_Architecture.jpg"
					altText="testin"
					url="/architecture"
					buttontext="ARCHITECTURE"
					theme="architecture"
				/>
				<MainImgButton
					imagePath="/src/images/travel.jpg"
					altText="testin"
					url="/travel"
					buttontext="travel"
					theme="travel"
				/>
			</div>
			<Footer/>
		</div>
			
		<script>
			import "../scripts/Swup.js"
		</script>
	</main>


</HtmlBody>
