---
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPost from '../components/BlogPost.astro'

const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "My Astro Learning Blog";
---
<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>

  <a class="openFB" href="/blank" data-fancybox="gallery" data-src="https://picsum.photos/100/400.webp" data-caption="Caption #1">
    <img src="https://picsum.photos/100/400.webp" />
  </a>
  
  <a class="openFB" href="/blank" data-fancybox="gallery" data-src="https://picsum.photos/400/100.webp" data-caption="Caption #2">
    <img src="https://picsum.photos/400/100.webp" />
  </a>

  <button class="openFB"><a href="/blank" data-caption="Caption #2">RE open fb</a></button>
</BaseLayout>